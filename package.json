{
  "name": "pos-system",
  "version": "1.0.0",
  "description": "Full-stack POS system with PostgreSQL and MuleSoft loyalty integration",
  "main": "server.js",
  "author": "Rodrigo Torres",
  "license": "MIT",
  "keywords": [
    "pos",
    "point-of-sale",
    "loyalty",
    "mulesoft",
    "postgresql",
    "react",
    "express"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rodrigo-torres/pos-demo"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm install",
    "heroku-postbuild": "npm run build",
    "update-cache": "node update-cache-version.js",
    "clear-cache": "npm run update-cache && echo 'Cache version updated! Please refresh your browser.'",
    "lint": "eslint public/**/*.js --ext .js",
    "lint:fix": "eslint public/**/*.js --ext .js --fix",
    "check-syntax": "node check-syntax.js",
    "precommit": "npm run check-syntax"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "path": "^0.12.7",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "eslint": "^9.35.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  }
}
